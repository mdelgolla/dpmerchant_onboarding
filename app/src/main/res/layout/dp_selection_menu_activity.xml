<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/sp_screen_height_20"
        android:orientation="vertical"
        android:gravity="center">
    <Button
        android:id="@+id/btn_reg_newCompany"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sp_screen_height_50"
        android:background="@drawable/btn_round_corner_blue"
        android:text="Redister New Company"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/sp_screen_height_20"/>
        <Button
            android:id="@+id/btn_submit_companyData"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sp_screen_height_50"
            android:background="@drawable/btn_round_corner_blue"
            android:text="Submit Registered Company Data"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>